<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="webappagenda" transaction-type="RESOURCE_LOCAL">
		<class>com.asae.entity.Ejercicio</class>
		<class>com.asae.entity.EjercicioTipoEjercicio</class>
		<class>com.asae.entity.EvaluacionEjercicio</class>
		<class>com.asae.entity.Migration</class>
		<class>com.asae.entity.Programa</class>
		<class>com.asae.entity.ProgramaEjercicio</class>
		<class>com.asae.entity.Repeticion</class>
		<class>com.asae.entity.Sesion</class>
		<class>com.asae.entity.TipoEjercicio</class>
		<class>com.asae.entity.Usuario</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/agendadb?useSSL=false"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
		</properties>
	</persistence-unit>
</persistence>
